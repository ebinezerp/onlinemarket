<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">


	<!-- Executed when webFlow is triggered -->
	<on-start>
		<!-- demohandler is java class available through annotated Demohandler.java 
			class.here we are calling itâ€™s initFlow() method. -->
		<evaluate expression="handlerClass.getUser()" result="flowScope.users" />
	</on-start>
	<!-- if not specified the first view state is the starting state -->
	<!-- view registration -->
	<view-state id="start" view="registration" model="flowScope.users">
		<transition on="submit" to="getaddress" />
		<transition on="cancel" to="cancel"/>
		<on-exit>
			<evaluate expression="handlerClass.getUserAddress()" result="flowScope.address" />
		</on-exit>
	</view-state>
	<!-- validating user -->
	<view-state id="getaddress" view="addresspage" model="flowScope.address">
		<transition on="submit" to="bindingaddress" />


	</view-state>
	<action-state id="bindingaddress">
	<evaluate expression="handlerClass.store(users,address)"></evaluate>
	<transition on="success" to="toHome"/>
	
	</action-state>
	<!-- <view-state id="confirmDetails" view="confirmDetails" model="flowScope.userBean">
		<transition on="edit" to="start" />
		<transition on="submit" to="welcome" />
	</view-state> -->

	<end-state id="welcome" view="welcome" />
	<end-state id="toHome" view="externalRedirect:contextRelative:/home" />
	<end-state id="toException"
		view="externalRedirect:contextRelative:exception.jsp" />

	<!-- these events are available in every state -->
	<global-transitions>
		<transition on="home" to="toHome" />
		<transition on="error" to="toException" />
	</global-transitions>
</flow>